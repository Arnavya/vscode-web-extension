{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "templatemark",
	"scopeName": "source.templatemark",
	"fileTypes": [
		".tem.md"
	],
	"patterns": [
		{  
			"include": "#cicero-variable"       
		},
		{  
			"include": "#double-square-bracket-variable"       
		},
		{  
			"include": "#double-curly-bracket-variable"       
		},
		{  
			"include": "#double-angle-bracket-variable"       
		},
		{  
			"include": "#square-bracket-variable"     
		},
		{  
			"include": "#curly-bracket-variable"       
		},
		{  
			"include": "#angle-bracket-variable"       
		}
	],
	"repository": {
		"cicero-variable": {
			"name": "cicero-variable.templatemark",
			"begin": "(\\[\\{)",
			"beginCaptures": {
				"0": {
					"name": "variable.string.begin.templatemark"
				}
			},
			"end": "(\\}\\])",
			"endCaptures": {
				"0": {
					"name": "variable.string.end.templatemark"
				}
			},
			"patterns": [
				{
					"name": "variable.boolean-binding.templatemark",
					"match": "\"([^\"]*)\":\\?\\s*([_$[:alpha:]][_$[:alnum:]]*)",
					"captures": {
						"0": { "name" : "constant.character.templatemark" },
						"1": { "name" : "variable.character.templatemark" }
					}
				},
				{	
					"name": "keyword.character.templatemark",
					"match": "([_$[:alpha:]][_$[:alnum:]]*)"
				},
				{
					"include": "#clause-binding"
				}
			]
		},
		"square-bracket-variable": {
			"name": "square-bracket-variable.templatemark",
			"begin": "\\[",
			"beginCaptures": {
				"0": {
					"name": "invalid.illegal.templatemark"
				}
			},
			"end": "\\]",
			"endCaptures": {
				"0": {
					"name": "invalid.illegal.templatemark"
				}
			},
			"patterns": [
				{
					"include": "#identifier"
				}
			]
		},
		"double-square-bracket-variable": {
			"name": "double-square-bracket-variable.templatemark",
			"begin": "\\[\\[",
			"beginCaptures": {
				"0": {
					"name": "invalid.illegal.templatemark"
				}
			},
			"end": "\\]\\]",
			"endCaptures": {
				"0": {
					"name": "invalid.illegal.templatemark"
				}
			},
			"patterns": [
				{
					"include": "#identifier"
				}
			]
		},
		"curly-bracket-variable": {
			"name": "curly-bracket-variable.templatemark",
			"begin": "\\{",
			"beginCaptures": {
				"0": {
					"name": "invalid.illegal.templatemark"
				}
			},
			"end": "\\}",
			"endCaptures": {
				"0": {
					"name": "invalid.illegal.templatemark"
				}
			},
			"patterns": [
				{
					"include": "#identifier"
				}
			]
		},
		"double-curly-bracket-variable": {
			"name": "double-curly-bracket-variable.templatemark",
			"begin": "\\{\\{",
				"beginCaptures": {
					"0": {
						"name": "invalid.illegal.templatemark"
					}
				},
			"end": "\\}\\}",
			"endCaptures": {
				"0": {
					"name": "invalid.illegal.templatemark"
				}
			},
			"patterns": [
				{
					"include": "#identifier"
				}
			]
		},
		"angle-bracket-variable": {
			"name": "angle-bracket-variable.templatemark",
			"begin": "<",
			"beginCaptures": {
				"0": {
					"name": "invalid.illegal.templatemark"
				}
			},
			"end": ">",
			"endCaptures": {
				"0": {
					"name": "invalid.illegal.templatemark"
				}
			},
			"patterns": [
				{
					"include": "#identifier"
				}
			]
		},
		"double-angle-bracket-variable": {
			"name": "double-angle-bracket-variable.templatemark",
			"begin": "<<",
				"beginCaptures": {
					"0": {
						"name": "invalid.illegal.templatemark"
					}
				},
			"end": ">>",
			"endCaptures": {
				"0": {
					"name": "invalid.illegal.templatemark"
				}
			},
			"patterns": [
				{
					"include": "#identifier"
				}
			]
		},
		"identifier": {
			"patterns": [
				{	
					"name": "invalid.illegal.templatemark",
					"match": "([_$[:alpha:]][_$[:alnum:]]*)"
				}
			]
		}
	}
}